<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%=title%></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="icon" href="/website/favicon.ico" type="image/x-icon" />
    <script src="https://kit.fontawesome.com/989de1eaa8.js" crossorigin="anonymous"></script>
    <style>
        body {
    background-image: linear-gradient(-225deg, #2CD8D5 0%, #C5C1FF 56%, #FFBAC3 100%);
    background-repeat: no-repeat;
    background-size: cover;
    margin: 0;
    min-height: 100vh;
}
.glass{
background: linear-gradient(to right bottom,rgba(255, 255, 255, 0.7),rgba(255, 255, 255, 0.4));
 -webkit-backdrop-filter: blur(10px);
 backdrop-filter:blur(10px) ;
}
.hover:hover{
  box-shadow: 0px 0px 6px 4px rgba(181, 71, 71, 0.2);
}
#liveToast {
      position: fixed;
      top: 65px;
      right: 20px;
      z-index: 9999; 
}
.highlight {
    background-color: yellow;
    display: inline;
}
<%if (typeof css !== 'undefined' && css !== null) {%><%-css%><%} else {}%>

    </style>
  </head>
  <body>
    
    <!-- navabar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #e3f2fd;">
        <div class="container-fluid ">

          <a class="navbar-brand" href="/"><img src="/website/logo.png" alt="logo" width="35" height="30" id="logoImage">empreview</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
            </ul>
            <div id="sign-button-div">
                <div id="not-signed-div" class="d-none">
                  <a class="btn btn-success" href="/login">login</a>
                  <a class="btn btn-warning" href="/signup">Signup</a>
                </div>
                <div id="signed-div" class=" d-flex">
                <abbr title="notifications" class="initialism text-decoration-none" >
                   <a class="text-decoration-none position-relative"  data-bs-toggle="offcanvas" href="#offcanvas" role="button" aria-controls="offcanvasExample" onclick="notificationFecth()">
                  <div class="me-4 hover">
                    <i class="fa-solid fa-bell fa-xl" style="color: #FFD43B;"></i>
                    <%if(notifications){%>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="margin-left: -17px;">
                      <%=notifications%>
                    </span>
                    <%}%>
                  </div>
                  </a>
                </abbr>
                <abbr title="account settings" class="initialism text-decoration-none" >
                  <a href="#" class="text-decoration-none" style="color: rgb(188, 131, 131);" onclick="myProileRedirect()">
                  <div class="me-4 hover">
                    <!-- Account settings -->
                    <i class="fa-solid fa-gear fa-xl"></i>
                  </div>
                  </a>
                </abbr>
                <abbr title="logout" class="initialism text-decoration-none" >
                  <div class="hover " data-bs-toggle="modal"  onclick="logoutModalsetter()" data-bs-target="#modal">
                    <i class="fa-solid fa-right-from-bracket fa-xl"></i>
                  </div>
                </abbr>
                </div>
            </div>
          </div>
        </div>
    </nav>

<!-- body -->

  <%-body%>


<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" id="modalHeader">
       
      </div>
      <div class="modal-body" id="modalBody">
        
      </div>
      <div class="modal-footer" id="modalFooter">
        
      </div>
    </div>
  </div>
</div>


<!-- toasts -->

<div class="toast-container position-fixed bottom-0 end-0 p-3 ">
  <div id="liveToast" class="toast glass" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header glass">
      <img src="/website/logo.png" class="rounded me-2" alt="logo" height="20px" width="20px">
      <strong class="me-auto">empreview</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body" id="toast-body">
    </div>
  </div>
</div>

<!-- offcanvas -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvas" aria-labelledby="offcanvasExampleLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasExampleLabel">Notifications</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div id="offcanvas-body-data" style="height: 100%;">
      
      <div class="d-flex flex-column justify-content-center align-items-center" style="height: 100%;">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p class="text-primary">loading...</p>
      </div>
    </div>

  </div>
</div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<script type="text/javascript" src="/javascript/layout.js" ></script>


<%if(javascript){%>
  <%-javascript%>
<%}%>

</body>
</html>